@page
@model vigia.Pages.Documentos.EditModel
@{
    ViewData["Title"] = "Editar Documento";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4 text-center">Editar Documento</h2>

            <form method="post">
                <input type="hidden" asp-for="Documento.Id" />

                <div class="mb-3">
                    <label asp-for="Documento.TipoDocumentoId" class="form-label"></label>
                    <select asp-for="Documento.TipoDocumentoId" class="form-select" asp-items="Model.TiposDocumentos">
                        <option value="">-- Selecione --</option>
                    </select>
                    <span asp-validation-for="Documento.TipoDocumentoId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Documento.NumeroDocumento" class="form-label"></label>
                    <input asp-for="Documento.NumeroDocumento" class="form-control" />
                    <span asp-validation-for="Documento.NumeroDocumento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Documento.DataValidade" class="form-label"></label>
                    <input asp-for="Documento.DataValidade" class="form-control" type="date" />
                    <span asp-validation-for="Documento.DataValidade" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="/Dashboard" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
